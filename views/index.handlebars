{{!-- * Setup the `index.handlebars` to have the template that Handlebars can render onto. --}}

{{!-- * Create a button in `index.handlebars` that will submit the user input into the database. --}}
<div class="container">
  <h1>Eat da Burger!</h1>
  <img src="/public/assets/burger_art.png" id="burger-art">
  <div id= "options">
    <h4>Your burger is served!</h4>
    <div></div>
    <h4>You Devoured it!</h4>
  </div>
  <ul>
    {{#each burger}}
      <li {{#if devoured}}class="devouredBurgers"{{else}}class="burgerRow"{{/if}} data-devoured="{{devoured}}">
        <div class="burgerListItem">{{id}}. {{burger_name}}</div>
        {{#if devoured}}<div class="placeholder"></div>{{else}}<button  data-id="{{id}}" class="devourBtn">Eat it now!</button>{{/if}}
        <div class="placeholder"></div>
      </li>
    {{/each}}
  </ul>
</div>
<form>
  <input type="text-area" id="burgerEnter" name="name" /> 
  <br>
  <button type="submit" id ="submitBtn">Add Burger</button>
</form>